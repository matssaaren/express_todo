<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <% if (error !== null) {%>
            <div class="row teal lighten-4">
              <div class="col s12">
                <p class="center-align"><%= error %></p>
              </div>
            </div>
            <% } %>
            <span class="card-title">ToDo List</span>
            <form method="post" action="<%= edit === null ? '/' : '/update-task/' %>">
              <div class="row">
                <div class="input-field col s12">
                  <label for="task">To do</label>
                  <input type="text" id="task" name="task" placeholder="Enter a task" autocomplete="off" value="<%= edit !== null ? tasks[edit].task : '' %>">
                </div>
              </div>
              <% if (edit === null) { %>
                <input class="btn" value="Add Task" type="submit">
              <% } else { %>
                <input class="btn" value="Update Task" type="submit">
                <input type="hidden" id="edit" name="edit" value="<%= edit %>">
                <a class="btn" href="/">Cancel</a>
              <% } %>
            </form>
            <ul class="collection">
              <% tasks.forEach((task, index) => { %>
                <li class="collection-item">
                  <%= task.task %>
                  <a href="delete-task/<%= task.id %>" class="secondary-content">
                    <i class="material-icons">delete</i>
                  </a>
                  <a href="update-task/<%= index %>" class="secondary-content">
                    <i class="material-icons">create</i>
                  </a>
                </li>
              <% }) %>
            </ul>
            <div class="input-field">
              <a href="clear-all/" class="btn">Clear All</a>
            </div>
          </div>   
        </div>    
      </div>
    </div>
  </div>
      
</body>
</html>